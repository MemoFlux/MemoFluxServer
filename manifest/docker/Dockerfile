FROM loads/alpine:3.8

###############################################################################
#                                INSTALLATION
###############################################################################

ENV WORKDIR                 /app
ADD resource                $WORKDIR/
ADD ./temp/linux_amd64/Routine $WORKDIR/Routine
RUN chmod +x $WORKDIR/Routine

###############################################################################
#                                   START
###############################################################################
WORKDIR $WORKDIR
CMD ./Routine
